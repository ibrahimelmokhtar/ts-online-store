{
  "name": "ts-online-store-api",
  "version": "1.0.0",
  "description": "Online Store Backend API for handling users' requests",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npx tsc",
    "clean": "rimraf ./build",
    "lint": "eslint . --ext .ts",
    "migration:reset": "db-migrate reset",
    "migration:run": "db-migrate up",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "prettier": "prettier --config .prettierrc src/**/*.ts --write",
    "start": "node ./build/server.js",
    "test": "SET NODE_ENV=test&& db-migrate reset && db-migrate up && jasmine",
    "test:migration:reset": "SET NODE_ENV=test&& db-migrate reset",
    "test:migration:run": "SET NODE_ENV=test&& db-migrate up",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./build --onSuccess \"node ./build/server.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibrahimelmokhtar/ts-online-store-api.git"
  },
  "keywords": [
    "HTML5",
    "CSS3",
    "JavaScript",
    "TypeScript",
    "Online Store Backend API",
    "egFWD",
    "Udacity"
  ],
  "author": "Ibrahim El-Mokhtar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ibrahimelmokhtar/ts-online-store-api/issues"
  },
  "homepage": "https://github.com/ibrahimelmokhtar/ts-online-store-api#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-ejs-layouts": "^2.5.1",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-ejs-layouts": "^2.5.0",
    "@types/jasmine": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4"
  }
}
